<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewNomeCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Supermercado"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/textViewDataInsercao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textViewNomeCategoria"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="08/10/1994"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/textViewCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textViewDataInsercao"
            android:layout_toLeftOf="@+id/textViewDataInsercao"
            android:layout_toStartOf="@+id/textViewDataInsercao"
            android:layout_marginRight="4dp"
            android:text="TextView"
            tools:text="@string/data_cadastro"
            android:textSize="16sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/textViewCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Credito/Debito"
        android:textSize="16sp" />

</LinearLayout>
